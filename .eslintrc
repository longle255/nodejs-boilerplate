{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "semi": [2, "always"],
    "comma-dangle" : 0,
    "space-before-function-paren": 0
  },
  "globals": {
    "_": true,
    "nconf": true,
    "log": true,
    "db": true,
    "authorizeRequest": true,
    "Services": true
  }
}
